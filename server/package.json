{
  "name": "workorders-server",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json && cp -R src/db/migrations dist/db/",
    "start": "node dist/index.js",
    "start:render": "npm run db:migrate && npm run start",
    "db:migrate": "tsx src/db/migrate.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.12.0",
    "twilio": "^5.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.14.10",
    "drizzle-kit": "^0.24.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
